<Window x:Class="CncControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CncControlApp" 
        xmlns:ctrls="clr-namespace:CncControlApp.Controls"
        mc:Ignorable="d"
        Title="CNC Kontrol Arayüzü"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF4F4F4F"
        ResizeMode="CanResize" d:DesignWidth="1817.208" d:DesignHeight="955">

    <Window.Resources>
        <!-- Base styles (only if you DON'T already have StatusLEDStyle / StatusTextStyle) -->
        <!-- Remove this block if you already defined them elsewhere -->
        <Style x:Key="StatusLEDStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Stroke" Value="#66000000"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Fill" Value="#FF9E9E9E"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF34C759"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Add BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- NEW: Alarm-aware LED style -->
        <Style x:Key="StatusLEDAlarmStyle" TargetType="Ellipse" BasedOn="{StaticResource StatusLEDStyle}">
            <Setter Property="Fill" Value="#FF9E9E9E"/> <!-- Disconnected default -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Normal">
                    <Setter Property="Fill" Value="#FF34C759"/> <!-- Green -->
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Alarm">
                    <Setter Property="Fill" Value="#FFFFC107"/> <!-- Amber -->
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Error">
                    <Setter Property="Fill" Value="#FFFF3B30"/> <!-- Red -->
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Disconnected">
                    <Setter Property="Fill" Value="#FF9E9E9E"/> <!-- Gray -->
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- NEW: Status text color changes (optional) -->
        <Style x:Key="StatusTextAlarmStyle" TargetType="TextBlock" BasedOn="{StaticResource StatusTextStyle}">
            <Setter Property="Text" Value="{Binding MachineStatus}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Normal">
                    <Setter Property="Foreground" Value="#FF34C759"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Alarm">
                    <Setter Property="Foreground" Value="#FFFFC107"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Error">
                    <Setter Property="Foreground" Value="#FFFF3B30"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SystemStateIndicator}" Value="Disconnected">
                    <Setter Property="Foreground" Value="#FF9E9E9E"/>
                    <Setter Property="Text" Value="Disconnected"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

            <!-- Probe Panel Style - CoordinatesView ile aynı boyut -->
            <Style x:Key="ProbePanelStyle" TargetType="Border">
                <Setter Property="Background" Value="#FF626262"/>
                <Setter Property="BorderBrush" Value="#FF4CAF50"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- Probe Button Style: uniform size across all probe buttons -->
            <Style x:Key="ProbeActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#FF4CAF50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FF388E3C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Height" Value="52"/>
                <Setter Property="Padding" Value="18,8"/>  <!-- consistent inner size -->
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF66BB6A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF2E7D32"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Probe Checkbox Style -->
            <Style x:Key="ProbeCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="5"/>
            </Style>

            <!-- Coordinate Text Style -->
            <Style x:Key="CoordinateTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FF4CAF50"/>
                <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <!-- Probe Point Coordinate Label Style -->
            <Style x:Key="ProbePointLabelStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
                <Setter Property="FontSize" Value="8"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="#AA000000"/>
                <Setter Property="Padding" Value="2"/>
            </Style>

            <!-- DarkCoordButtonStyle copied from CoordinatesView for consistency -->
            <Style x:Key="DarkCoordButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#FF3E3E40"/>
                <Setter Property="BorderBrush" Value="#FF2A2A2C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="#FFDDDDDD"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    <Border x:Name="HoverOverlay"
                                            CornerRadius="10"
                                            Background="#10FFFFFF"
                                            Visibility="Collapsed"/>
                                    <Border x:Name="PressedOverlay"
                                            CornerRadius="10"
                                            Background="#33000000"
                                            Visibility="Collapsed"/>
                                </Grid>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.25" Color="#000000"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="HoverOverlay" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="Root" Property="Background" Value="#FF4A4A4C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="HoverOverlay" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="PressedOverlay" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="Root" Property="Background" Value="#FF2D2D2F"/>
                                    <Setter TargetName="Root" Property="BorderBrush" Value="#FF1E1E20"/>
                                    <Setter TargetName="Root" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter TargetName="Root" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Probe Mode RadioButton Style: clearly show selected/hover states -->
            <Style x:Key="ProbeModeRadioStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="#FFDDDDDD"/>
                <Setter Property="Background" Value="#FF3E3E40"/>
                <Setter Property="BorderBrush" Value="#FF2A2A2C"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="14,6"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.25" Color="#000000"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF4A4A4C"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF4CAF50"/>
                                    <Setter TargetName="Root" Property="BorderBrush" Value="#FF388E3C"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

    <Grid Background="#FF626262">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="655.797"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Panel with Status and Logo -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                Background="#FF2D2D30"
                CornerRadius="12"
                Padding="20,8"
                Margin="15,15,10,0" Height="100" VerticalAlignment="Top" BorderBrush="#FFA2A2A4">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left - Status -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="StatusLED"
                                 Style="{StaticResource StatusLEDAlarmStyle}"
                                 Margin="0,0,15,0"/>
                        <TextBlock x:Name="StatusText"
                                   Style="{StaticResource StatusTextAlarmStyle}"/>

                        <!-- NEW: Clear Alarm button (visible only when MachineStatus == Alarm) -->
                        <Button x:Name="ClearAlarmTopButton"
                                Content="Clear Alarm"
                                Click="ClearAlarmTopButton_Click"
                                Margin="15,0,0,0"
                                Padding="12,4"
                                Foreground="White"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Background" Value="#FFFF7043"/>
                                    <Setter Property="BorderBrush" Value="#FFBF360C"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Height" Value="28"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MachineStatus}" Value="Alarm">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Center - Logo ve Title Birlikte -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <!-- Logo -->
                    <Border Background="#FFD9D9D9"
                            CornerRadius="12"
                            Padding="4"
                            BorderBrush="#FF3C3C3E"
                            BorderThickness="1"
                            Height="80"
                            Margin="0,0,20,0"
                            SnapsToDevicePixels="True">
                        <Viewbox Stretch="Uniform" StretchDirection="Both">
                            <Image Source="pack://application:,,,/Images/logo-seffaf.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>
                    
                    <!-- Title -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CNC CONTROL SYSTEM" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="Professional CNC Management Interface" 
                                   FontSize="12" 
                                   Foreground="#FFB0BEC5" 
                                   HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right - Emergency Stop Button -->
                <Button x:Name="EmergencyStopButton"
                        Grid.Column="2"
                        Style="{StaticResource EmergencyStopImageStyle}"
                        Click="EmergencyButton_Click"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,7,5,0"
                        ClipToBounds="False"/>
            </Grid>
        </Border>

        <!-- MenuView - Aligned top (5) and bottom (10) like Coordinates / MainContent -->
        <local:MenuView Grid.Row="1"
                        Grid.Column="2"
                        x:Name="MainMenuView"
                        Margin="5,5,5,10"/>

        <!-- Main Content -->
        <ContentControl Grid.Row="1" 
                        x:Name="MainContent" Grid.ColumnSpan="1" Margin="20,5,5,10" Height="Auto" Background="#FF2D2D30" />

        <!-- Right side: Coordinates + Actions + Canvas + Probe container -->
      <Grid Grid.Row="1" Grid.Column="1" Margin="5,5,0,10">
         <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
     <RowDefinition Height="Auto"/>
     <RowDefinition Height="*"/>
  </Grid.RowDefinitions>

  <!-- Coordinates panel (top, natural size) -->
   <local:CoordinatesView x:Name="MainCoordinatesView"
   Grid.Row="0"
           SnapsToDevicePixels="True"
  Margin="5,0,5,5"
     VerticalAlignment="Top" />

        <!-- Home / Zero All panel (below coordinates, hidden by default) -->
     <local:HomeZeroPanelView x:Name="HomeZeroActionsPanel"
    Grid.Row="1"
   Margin="5,0,5,5"
     VerticalAlignment="Top"
        Visibility="Collapsed" />

     <!-- NEW: Workspace Canvas (expands to fill remaining space) -->
     <ctrls:PanelJogCanvasView x:Name="MainPanelJogCanvas"
  Grid.Row="2"
        Margin="5,0,5,0"
       VerticalAlignment="Stretch"
   HorizontalAlignment="Stretch"
   Visibility="Visible" />

 <!-- Probe panel sits in bottom row during Probe menu -->
  <ctrls:ProbePanelView x:Name="MainProbePanel"
    Grid.Row="1"
        Grid.RowSpan="2"
  Margin="5,0,5,0"
  Visibility="Collapsed" />

  <!-- Settings/Status blank panel overlays all rows when visible -->
     <Border x:Name="RightBlankPanel"
        Grid.Row="0"
       Grid.RowSpan="3"
    Background="#FF2D2D30"
           BorderBrush="#FFA2A2A4"
    BorderThickness="1"
     CornerRadius="10"
     Padding="16"
        Visibility="Collapsed">
                <!-- existing blank content remains unchanged -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Top: Company Logo (max width) -->
                    <Border Grid.Row="0" Background="#FFD9D9D9" CornerRadius="10" Padding="10" BorderBrush="#FF3C3C3E" BorderThickness="1">
                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" MaxHeight="160">
                            <Image Source="pack://application:,,,/Images/logo-seffaf.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>
                    <!-- Bottom: Contact and Company Info -->
                    <Border Grid.Row="1" Margin="0,12,0,0" Background="#FF2D2D30" CornerRadius="10" Padding="14" BorderBrush="#FFA2A2A4" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="İletişim" FontSize="14" FontWeight="Bold" Foreground="#FF4CAF50" Margin="0,0,0,8"/>

                                <!-- Website -->
                                <TextBlock Foreground="#FFB0BEC5" FontSize="12">
                                    <Run Text="Web: "/>
                                    <Hyperlink NavigateUri="https://www.raptorextech.com" RequestNavigate="Hyperlink_RequestNavigate">
                                        <Run Text="www.raptorextech.com"/>
                                    </Hyperlink>
                                </TextBlock>

                                <!-- Address -->
                                <TextBlock Foreground="#FFB0BEC5" FontSize="12" Margin="0,4,0,0">
                                    <Run Text="Adres: "/>
                                    <Run Text="[Firma adresi buraya]"/>
                                </TextBlock>

                                <!-- Phone -->
                                <TextBlock Foreground="#FFB0BEC5" FontSize="12" Margin="0,4,0,8">
                                    <Run Text="Telefon: "/>
                                    <Run Text="[0 (xxx) xxx xx xx]"/>
                                </TextBlock>

                                <Separator Margin="0,4,0,8"/>

                                <!-- System Information -->
                                <TextBlock Text="Sistem Bilgileri" FontSize="14" FontWeight="Bold" Foreground="#FF00D9FF" Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Software Version -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Yazılım:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SoftwareVersion, StringFormat='v{0}'}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>
                                        <Button Content="{Binding LatestVersion, StringFormat='⬆ v{0}'}" 
                                                Command="{Binding DownloadUpdateCommand}"
                                                Visibility="{Binding UpdateButtonVisibility}"
                                                FontSize="9" FontWeight="Bold"
                                                Foreground="White" Background="#FF4CAF50"
                                                BorderThickness="0" Padding="6,2" Margin="8,0,0,0"
                                                Cursor="Hand" ToolTip="Yeni versiyon mevcut - Tıklayarak indir">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF66BB6A"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>

                                    <!-- Firmware Name -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Firmware:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FirmwareName}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Firmware Version -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Versiyon:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FirmwareVersion}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Board Name -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Kart:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BoardName}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Config Name -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Konfigurasyon:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ConfigName}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Detected Axis Count -->
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Eksen Sayısı:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DetectedAxisCount, Mode=OneWay}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- FluidNC -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="FluidNC:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding IsFluidNC}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Spacer -->
                                    <TextBlock Grid.Row="7" Grid.ColumnSpan="2" Height="1"/>

                                    <!-- Connection subsection -->
                                    <TextBlock Grid.Row="8" Grid.ColumnSpan="2" Text="Bağlantı" FontSize="12" FontWeight="Bold" Foreground="#FF4CAF50" Margin="0,6,0,4"/>
                                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Port:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding ConnectionPort}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>
                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Açıklama:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding ConnectionDescription}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>
                                    <TextBlock Grid.Row="11" Grid.Column="0" Text="Üretici:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding ConnectionManufacturer}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>
                                    <TextBlock Grid.Row="12" Grid.Column="0" Text="PNP ID:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="12" Grid.Column="1" Text="{Binding ConnectionPnpId}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="13" Grid.Column="0" Text="Taşıma:" FontSize="11" Foreground="#FFB0BEC5" Margin="0,2,8,2"/>
                                    <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding ConnectionTransport}" FontSize="11" Foreground="#FFDDDDDD" Margin="0,2,0,2"/>

                                    <!-- Spacer -->
                                    <TextBlock Grid.Row="14" Grid.ColumnSpan="2" Height="1"/>

                                    <!-- Serial subsection -->
