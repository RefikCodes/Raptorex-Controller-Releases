<UserControl x:Class="CncControlApp.JogView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CncControlApp"
     xmlns:conv="clr-namespace:CncControlApp.Converters"
  xmlns:controls="clr-namespace:CncControlApp.Controls"
  mc:Ignorable="d" 
  HorizontalAlignment="Stretch" 
    VerticalAlignment="Stretch"
 d:DesignHeight="945">

    <!-- DESIGNER REFRESH MARKER -->

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StepBackgroundConverter x:Key="StepBackgroundConverter"/>
        <conv:SubtractiveHeightConverter x:Key="SubtractiveHeightConverter"/>

        <Style x:Key="RadioStepToggleButtonStyle" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource TouchFriendlyStepToggleButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF757575"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FF4CAF50"/>
                    <Setter Property="BorderBrush" Value="#FF388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- MİL ve SOĞUTMA butonları için özel stil - Kendi template'i ile -->
        <Style x:Key="ControlToggleButtonBorderOnlyStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="Background" Value="#FF474A50"/>
            <Setter Property="BorderBrush" Value="#FFA2A2A4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="8,5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Normal: Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A5D63"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF9CCC65"/>
                            </Trigger>
                            <!-- Normal: Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5A5D63"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8BC34A"/>
                            </Trigger>
                            <!-- AKTİF (Checked=True): Yeşil arka plan -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2E7D32"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- AKTİF + Hover: Daha açık yeşil -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#FF388E3C"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF81C784"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#FF626262" CornerRadius="15">
        <!-- MAIN GRID -->
        <Grid x:Name="MainGrid" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- ROW 0 - Top Control Panel -->
            <Border Grid.Column="0"
        CornerRadius="10"
 Padding="15,5,15,8"
     BorderBrush="#FFA2A2A4"
    BorderThickness="1"
     Background="#FF2D2D30" Margin="5,0,5,0">
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="btnCoolant" 
                        Content="SOĞUTMA" 
                        Style="{StaticResource ControlToggleButtonBorderOnlyStyle}"
                        Click="CoolantButton_Click"
                        ToolTip="Soğutma Açık/Kapalı" 
                        Height="55"/>
                </StackPanel>
            </Border>

            <!-- ROW 0 - Spindle Speed Panel -->
            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
     Background="#FF2D2D30"
     CornerRadius="10"
 Margin="5,0,5,0"
Padding="15,8"
   BorderThickness="1"
       BorderBrush="#FFA2A2A4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <ToggleButton x:Name="btnSpindle" 
                        Content="MİL" 
                        Style="{StaticResource ControlToggleButtonBorderOnlyStyle}"
                        Click="SpindleButton_Click"
                        ToolTip="Mil Açık/Kapalı" 
                        Margin="0,0,20,0" 
                        Height="55"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid Margin="5,0,5,0" VerticalAlignment="Center" Width="496">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="0" FontSize="10" FontWeight="Bold"
  Foreground="DarkGray" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Slider Grid.Column="1"
      x:Name="SpindleSpeedSlider"
     Orientation="Horizontal"
Style="{StaticResource TouchFriendlySliderStyle}"
 Width="415"
Height="47"
      Minimum="0"
   Maximum="{Binding MaxSpindleSpeed, FallbackValue=24000}"
     Value="{Binding SpindleSpeed, Mode=TwoWay}"
   IsEnabled="{Binding IsSpindleOn}"
     Background="#FF474A50"
    Foreground="#FF4CAF50"
   TouchDown="SpindleSpeedSlider_TouchDown"
 TouchMove="SpindleSpeedSlider_TouchMove"
     TouchUp="SpindleSpeedSlider_TouchUp"
     TouchLeave="SpindleSpeedSlider_TouchLeave"
   MouseDown="SpindleSpeedSlider_MouseDown"
   MouseMove="SpindleSpeedSlider_MouseMove"
   MouseUp="SpindleSpeedSlider_MouseUp"
  ValueChanged="SpindleSpeedSlider_ValueChanged"
    BorderBrush="#FFA2A2A4" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2" Text="{Binding MaxSpindleSpeed, StringFormat=F0}"
        FontSize="10" FontWeight="Bold" Foreground="#FFBDBDBD"
VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                        <Border CornerRadius="8" Padding="10,6" MinWidth="100" Margin="30,0,0,0" Width="180">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="150">
                                <TextBlock Text="{Binding SpindleSpeed, StringFormat=F0}" FontSize="16"
 FontWeight="Normal" Foreground="#FF4CAF50" VerticalAlignment="Center"/>
                                <TextBlock Text=" RPM" FontSize="12" FontWeight="Normal"
  Foreground="White" VerticalAlignment="Center" Margin="2,0,0,0" Width="123"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ROW 1 - Panel Jog Button (Right side) -->

            <!-- ROW 2 - XY Movement (Spanning 3 columns) -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
  Background="#FF2D2D30"
   CornerRadius="10"
 Padding="15"
  BorderBrush="#FFA2A2A4"
  BorderThickness="1"
   Margin="0,10,5,0">
                <Grid x:Name="XYPanelRoot" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
  Text="X-Y EKSEN HAREKETİ"
    Style="{StaticResource SectionHeaderStyle}"
 HorizontalAlignment="Center"/>

                    <Button x:Name="btnJogYplus"
  Grid.Row="2" Grid.Column="1"
  Style="{StaticResource UnifiedJogButtonStyle}"
     PreviewMouseDown="JogYPlus_Start"
  PreviewMouseUp="Jog_Stop"
       MouseLeave="Jog_Stop_MouseLeave"
      MouseMove="Jog_MouseMove"
 TouchDown="JogYPlus_TouchStart"
   TouchUp="Jog_TouchStop"
   TouchLeave="Jog_TouchStop"
    TouchMove="Jog_TouchMove"
      Width="120"
      Height="120"
      Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="▲" FontSize="32" Foreground="Black"/>
                            <TextBlock Text="Y+" FontSize="18" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnJogXminus"
   Grid.Row="3" Grid.Column="0"
     Style="{StaticResource UnifiedJogButtonStyle}"
      PreviewMouseDown="JogXMinus_Start"
   PreviewMouseUp="Jog_Stop"
   MouseLeave="Jog_Stop_MouseLeave"
      MouseMove="Jog_MouseMove"
 TouchDown="JogXMinus_TouchStart"
TouchUp="Jog_TouchStop"
     TouchLeave="Jog_TouchStop"
    TouchMove="Jog_TouchMove"
   HorizontalAlignment="Right"
  VerticalAlignment="Center"
      Width="120"
      Height="120"
    Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="◄" FontSize="32" Foreground="Black"/>
                            <TextBlock Text=" X-" FontSize="18" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <!-- Center Coordinate Display Panel -->
                    <Border Grid.Row="3" Grid.Column="1"
  CornerRadius="30"
       Width="120"
     Height="120"
         Margin="20,20,20,20"
      Background="#FF616D84"
 BorderThickness="1"
        BorderBrush="#FFCBCBCB"
     HorizontalAlignment="Center"
VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontSize="16"
    Foreground="palegreen"
    HorizontalAlignment="Center"
 FontWeight="Normal">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="X: {0:F2}&#x0a;Y: {1:F2}">
                                        <Binding Path="MStatus.WorkX"/>
                                        <Binding Path="MStatus.WorkY"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Button x:Name="btnJogXplus"
    Grid.Row="3" Grid.Column="2"
  Style="{StaticResource UnifiedJogButtonStyle}"
PreviewMouseDown="JogXPlus_Start"
    PreviewMouseUp="Jog_Stop"
      MouseLeave="Jog_Stop_MouseLeave"
  MouseMove="Jog_MouseMove"
   TouchDown="JogXPlus_TouchStart"
 TouchUp="Jog_TouchStop"
       TouchLeave="Jog_TouchStop"
      TouchMove="Jog_TouchMove"
  HorizontalAlignment="Left"
 VerticalAlignment="Center"
      Width="120"
      Height="120"
   Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="X+ " FontSize="18" Foreground="Black"/>
                            <TextBlock Text="►" FontSize="32" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnJogYminus"
   Grid.Row="4" Grid.Column="1"
 Style="{StaticResource UnifiedJogButtonStyle}"
   PreviewMouseDown="JogYMinus_Start"
     PreviewMouseUp="Jog_Stop"
   MouseLeave="Jog_Stop_MouseLeave"
   MouseMove="Jog_MouseMove"
    TouchDown="JogYMinus_TouchStart"
   TouchUp="Jog_TouchStop"
    TouchLeave="Jog_TouchStop"
     TouchMove="Jog_TouchMove"
 Width="120"
 Height="120"
 Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Y-" FontSize="18" Foreground="Black"/>
                            <TextBlock Text="▼" FontSize="32" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <Grid Grid.Row="6" Grid.ColumnSpan="3"
   Margin="0,10,0,0"
   HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="F:" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentXYJogSpeed, StringFormat={}{0} mm/min}"
    FontSize="12" FontWeight="Bold" Foreground="#FF4CAF50" Margin="0,0,15,0"/>
                        <TextBlock Grid.Column="2" Text="Step:" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="3" Text="{Binding SelectedXYZStepSizeDisplay}"
    FontSize="12" FontWeight="Bold" Foreground="#FF4CAF50"/>
                    </Grid>

                    <!-- XY-only overlay host on top of the XY content -->
                    <Grid x:Name="PanelJogOverlayHostXY"
  Grid.Row="0" Grid.Column="0"
 Grid.RowSpan="7" Grid.ColumnSpan="3"
Background="Transparent"
   Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- ROW 2 - Z Movement (Last column) -->
            <Border Grid.Row="1" Grid.Column="2"
 Background="#FF2D2D30"
 CornerRadius="10"
      Padding="15"
   BorderBrush="#FFA2A2A4"
     BorderThickness="1"
   Margin="0,10,0,0">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="1"
    Text="Z EKSEN HAREKETİ"
    Style="{StaticResource SectionHeaderStyle}"
  HorizontalAlignment="Center"/>

                    <Button x:Name="btnJogZplus"
 Grid.Row="2"
   Style="{StaticResource UnifiedJogButtonStyle}"
       PreviewMouseDown="JogZPlus_Start"
       PreviewMouseUp="Jog_Stop"
  MouseLeave="Jog_Stop_MouseLeave"
  MouseMove="Jog_MouseMove"
     TouchDown="JogZPlus_TouchStart"
TouchUp="Jog_TouchStop"
   TouchLeave="Jog_TouchStop"
     TouchMove="Jog_TouchMove"
  HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Width="120"
      Height="120"
      Margin="5">
                        <StackPanel>
                            <TextBlock Text="▲" FontSize="32" Foreground="Black"/>
                            <TextBlock Text="Z+" FontSize="18" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <Border Grid.Row="3"
    Background="#FF616D84"
     CornerRadius="30"
         Width="120"
  Height="120"
   Margin="20,20,20,20"
     HorizontalAlignment="Center"
   VerticalAlignment="Center"
       BorderBrush="#FFCBCBCB"
    BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding MStatus.WorkZ, StringFormat=F2}" 
  FontSize="16" Foreground="palegreen"
  HorizontalAlignment="Center"
  FontWeight="Normal"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="btnJogZminus"
   Grid.Row="4"
  Style="{StaticResource UnifiedJogButtonStyle}"
PreviewMouseDown="JogZMinus_Start"
      PreviewMouseUp="Jog_Stop"
 MouseLeave="Jog_Stop_MouseLeave"
    MouseMove="Jog_MouseMove"
TouchDown="JogZMinus_TouchStart"
       TouchUp="Jog_TouchStop"
     TouchLeave="Jog_TouchStop"
 TouchMove="Jog_TouchMove"
   HorizontalAlignment="Center"
 VerticalAlignment="Center"
      Width="120"
Height="120"
      Margin="5">
                        <StackPanel>
                            <TextBlock Text="Z-" FontSize="18" Foreground="Black"/>
                            <TextBlock Text="▼" FontSize="32" Foreground="Black"/>
                        </StackPanel>
                    </Button>

                    <Grid Grid.Row="6" Grid.ColumnSpan="1"
   Margin="0,10,0,0"
   HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="F:" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentZJogSpeed, StringFormat={}{0} mm/min}"
    FontSize="12" FontWeight="Bold" Foreground="#FF4CAF50" Margin="0,0,15,0"/>
                        <TextBlock Grid.Column="2" Text="Step:" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="3" Text="{Binding SelectedXYZStepSizeDisplay}"
 FontSize="12" FontWeight="Bold" Foreground="#FF4CAF50"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- ROW 3 - XYZ STEP Control (Horizontal, spanning all columns) -->
            <Border x:Name="XYZStepPanel"
 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
 Background="#FF2D2D30"
        CornerRadius="10"
     Padding="15"
    BorderBrush="#FFA2A2A4"
BorderThickness="1"
 Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="XYZ ADIM KONTROLÜ"
      Style="{StaticResource SectionHeaderStyle}"
   HorizontalAlignment="Left"
  Margin="0,0,0,10"/>

                        <ToggleButton x:Name="XYZContinuousButton"
     Style="{StaticResource RadioStepToggleButtonStyle}"
    Content="SÜREKLİ"
   FontSize="12"
     FontWeight="Bold"
 Width="140"
    Height="50"
  Click="XYZContinuous_Click"
     Background="#FF474A50"/>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
         Text="ADIM BOYUTU (mm)"
 FontSize="11"
   Foreground="#FFBDBDBD"
  HorizontalAlignment="Left"
   Margin="0,0,0,5"/>

                        <UniformGrid Grid.Row="1" Rows="1" Columns="8" x:Name="XYZStepButtonGrid">
                            <ToggleButton Content="0.01" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="0.01"
    Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
      TouchUp="XYZStepSize_TouchUp"
     PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
       Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="0.03" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="0.03"
   Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
    TouchUp="XYZStepSize_TouchUp"
    PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
    Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="0.05" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="0.05"
    Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
  TouchUp="XYZStepSize_TouchUp"
    PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
 Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="0.1" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="0.1"
    Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
     TouchUp="XYZStepSize_TouchUp"
 PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
 Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="1" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="1"
 Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
  TouchUp="XYZStepSize_TouchUp"
    PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
       Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="5" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="5"
Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
     TouchUp="XYZStepSize_TouchUp"
PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
 Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="10" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="10"
  Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
    TouchUp="XYZStepSize_TouchDown"
    PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
           Background="#FF474A50" Margin="2"/>
                            <ToggleButton Content="20" Style="{StaticResource RadioStepToggleButtonStyle}" Tag="20"
 Click="XYZStepSize_Click" TouchDown="XYZStepSize_TouchDown"
        TouchUp="XYZStepSize_TouchUp"
   PreviewMouseLeftButtonDown="XYZStepSize_PreviewMouseDown"
  Background="#FF474A50" Margin="2"/>
                        </UniformGrid>
                    </Grid>
                </Grid>
            </Border>

            <!-- ROW 4 - SPEED Control (Horizontal, spanning all columns) -->
            <Border x:Name="SpeedPanelBorder"
        Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"
  Background="#FF2D2D30"
  CornerRadius="10"
     Padding="15,8"
    BorderBrush="#FFA2A2A4"
 BorderThickness="1"
    Margin="0,10,0,0">
      <Grid ClipToBounds="True" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

         <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
      <TextBlock Text="HAREKET HIZI"
       FontSize="12"
  FontWeight="Bold"
 Foreground="White"
   VerticalAlignment="Center"
    Margin="0,0,10,0"/>

         <Grid Margin="5,0,5,0" VerticalAlignment="Center" Width="496">
         <Grid.RowDefinitions>
   <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
           <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="Auto"/>
     </Grid.ColumnDefinitions>

     <TextBlock Grid.Row="1" Grid.Column="0"
   Text="1%"
    FontSize="10"
    FontWeight="Bold"
  Foreground="DarkGray" VerticalAlignment="Center" Margin="0,0,10,0"/>

          <Slider x:Name="JogSpeedSlider"
      Grid.Row="1" Grid.Column="1"
       Orientation="Horizontal"
    Style="{StaticResource TouchFriendlySliderStyle}"
    Maximum="100"
        Minimum="1"
        Value="{Binding JogSpeedPercentage, Mode=TwoWay}"
      Width="415"
      Height="47"
  Background="#FF474A50"
Foreground="#FF0986E6"
   BorderThickness="1"
    BorderBrush="#FFA2A2A4"
      VerticalAlignment="Center"
  TouchDown="JogSpeedSlider_TouchDown"
  TouchMove="JogSpeedSlider_TouchMove"
 TouchUp="JogSpeedSlider_TouchUp"
   TouchLeave="JogSpeedSlider_TouchLeave"
 MouseDown="JogSpeedSlider_MouseDown"
   MouseMove="JogSpeedSlider_MouseMove"
   MouseUp="JogSpeedSlider_MouseUp"
     ValueChanged="JogSpeedSlider_ValueChanged"
  HorizontalAlignment="Left"/>

            <TextBlock Grid.Row="1" Grid.Column="2"
     Text="100%"
FontSize="10"
   FontWeight="Bold"
      Foreground="#FFBDBDBD"
    VerticalAlignment="Center"
    Margin="10,0,0,0"/>
     </Grid>

     <Border CornerRadius="8" Padding="10,6" MinWidth="100" Margin="30,0,0,0" Width="180">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="150">
        <TextBlock Text="{Binding JogSpeedPercentage, StringFormat={}{0:F0}}"
      FontSize="16"
       FontWeight="Normal"
         Foreground="#FF0986E6"
  VerticalAlignment="Center"/>
          <TextBlock Text=" %"
      FontSize="12"
   FontWeight="Normal"
      Foreground="White"
    VerticalAlignment="Center"
      Margin="2,0,0,0"
  Width="123"/>
 </StackPanel>
           </Border>

           <!-- Reset Button -->
  <Button x:Name="JogSpeedResetButton"
  Content="↻ SIFIRLA"
    Click="JogSpeedResetButton_Click"
   Background="#FF474A50"
        BorderBrush="#FFA2A2A4"
   BorderThickness="1"
    Height="55"
 Width="100"
         Margin="20,0,0,0"
ToolTip="Hareket hızını %50'ye sıfırla"
  FontSize="12"
    FontWeight="Bold"
  Foreground="White"
 Cursor="Hand">
 <Button.Style>
     <Style TargetType="Button">
         <Setter Property="Background" Value="#FF474A50"/>
        <Setter Property="BorderBrush" Value="#FFA2A2A4"/>
        <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Template">
     <Setter.Value>
    <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}"
 BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="10">
  <ContentPresenter HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
        </Border>
             <ControlTemplate.Triggers>
     <Trigger Property="IsMouseOver" Value="True">
    <Setter Property="Background" Value="#FF5A5D63"/>
 <Setter Property="BorderBrush" Value="#FF9CCC65"/>
     </Trigger>
   <Trigger Property="IsPressed" Value="True">
      <Setter Property="Background" Value="#FF5A5D63"/>
       <Setter Property="BorderBrush" Value="#FF8BC34A"/>
 </Trigger>
     </ControlTemplate.Triggers>
      </ControlTemplate>
 </Setter.Value>
 </Setter>
     </Style>
       </Button.Style>
        </Button>
 </StackPanel>
     </Grid>
   </Border>

            <!-- Keep the old full overlay host collapsed (not used) -->
            <Grid x:Name="PanelJogOverlayHost"
  Grid.Row="1"
   Grid.Column="0"
    Grid.ColumnSpan="5"
  Grid.RowSpan="1"
    Background="Transparent"
 Visibility="Collapsed"/>
        </Grid>
    </Border>
</UserControl>