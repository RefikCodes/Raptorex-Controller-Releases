<Window x:Class="CncControlApp.Controls.NumberPadPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Pad" 
        Width="490" Height="630"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <!-- Define local styles to avoid dependency issues -->
    <Window.Resources>
        <Style x:Key="LocalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF666666"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF888888"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF777777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LocalCancelButtonStyle" TargetType="Button" BasedOn="{StaticResource LocalButtonStyle}">
            <Setter Property="Background" Value="#FFFF6B35"/>
        </Style>

        <Style x:Key="LocalG00ButtonStyle" TargetType="Button" BasedOn="{StaticResource LocalButtonStyle}">
            <Setter Property="Background" Value="#FF4CAF50"/>
        </Style>

        <Style x:Key="LocalClearButtonStyle" TargetType="Button" BasedOn="{StaticResource LocalButtonStyle}">
            <Setter Property="Background" Value="#FFFF6B35"/>
        </Style>
    </Window.Resources>

    <Border Background="#FF424242" 
            BorderBrush="#FFC1CCF3" 
            BorderThickness="2" 
            CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Enter " 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="AxisNameTextBlock"
                           Text="X" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF4CAF50"/>
                <TextBlock Text=" Coordinate" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>

            <!-- Display -->
            <TextBox x:Name="DisplayTextBox" 
                     Grid.Row="1" 
                     FontSize="32" 
                     FontWeight="Bold" 
                     Height="70" 
                     Text="0" 
                     TextAlignment="Right" 
                     VerticalContentAlignment="Center"
                     Background="#FF2D3D2D" 
                     Foreground="#FF4CAF50" 
                     BorderBrush="#FF4CAF50" 
                     BorderThickness="2" 
                     IsReadOnly="True" 
                     Margin="0,0,0,20"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

            <!-- Number Pad -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: Clear, +/-, Backspace -->
                <Button Grid.Row="0" Grid.Column="0" Content="C" Style="{StaticResource LocalClearButtonStyle}" 
                        Click="ClearButton_Click" Height="70" Margin="3" FontSize="18"/>
                <Button Grid.Row="0" Grid.Column="1" Content="±" Style="{StaticResource LocalButtonStyle}" 
                        Click="PlusMinusButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="0" Grid.Column="2" Content="⌫" Style="{StaticResource LocalClearButtonStyle}" 
                        Click="BackspaceButton_Click" Height="70" Margin="3" FontSize="18"/>

                <!-- Row 1: 7, 8, 9 -->
                <Button Grid.Row="1" Grid.Column="0" Content="7" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="1" Grid.Column="1" Content="8" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="1" Grid.Column="2" Content="9" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>

                <!-- Row 2: 4, 5, 6 -->
                <Button Grid.Row="2" Grid.Column="0" Content="4" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="2" Grid.Column="1" Content="5" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="2" Grid.Column="2" Content="6" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>

                <!-- Row 3: 1, 2, 3 -->
                <Button Grid.Row="3" Grid.Column="0" Content="1" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="3" Grid.Column="1" Content="2" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="3" Grid.Column="2" Content="3" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>

                <!-- Row 4: 0, ., - -->
                <Button Grid.Row="4" Grid.Column="0" Content="0" Style="{StaticResource LocalButtonStyle}" 
                        Click="NumberButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="4" Grid.Column="1" Content="." Style="{StaticResource LocalButtonStyle}" 
                        Click="DecimalButton_Click" Height="70" Margin="3" FontSize="20"/>
                <Button Grid.Row="4" Grid.Column="2" Content="-" Style="{StaticResource LocalButtonStyle}" 
                        Click="MinusButton_Click" Height="70" Margin="3" FontSize="20" Background="#FF6B7E93"/>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancel" Style="{StaticResource LocalCancelButtonStyle}" 
                        Click="CancelButton_Click" Height="60" Margin="0,0,8,0" FontSize="16"/>
                <Button Grid.Column="1" Content="G00" Style="{StaticResource LocalG00ButtonStyle}" 
                        Click="G00Button_Click" Height="60" Margin="8,0,0,0" FontSize="18" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Border>
</Window>