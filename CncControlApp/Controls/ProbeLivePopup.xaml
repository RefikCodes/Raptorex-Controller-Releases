<Window x:Class="CncControlApp.Controls.ProbeLivePopup"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Probe Live" Height="330" Width="390"
 WindowStartupLocation="CenterOwner"
 WindowStyle="ToolWindow"
 ResizeMode="NoResize"
 Topmost="True"
 ShowInTaskbar="False"
 Background="#222"
 Foreground="White">
 <Grid Margin="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock x:Name="HeaderText"
 Text="Probe Live Monitor"
 FontSize="14"
 FontWeight="Bold"
 Margin="0,0,0,6"/>

 <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" CornerRadius="6" Padding="8" Background="#111">
 <StackPanel>
 <TextBlock Text="• Coarse doğrulama:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
 <TextBlock x:Name="CoarseLine" FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"/>
 <Separator Margin="0,6,0,6"/>
 <ScrollViewer x:Name="LogScroll" VerticalScrollBarVisibility="Auto" Height="120">
 <TextBlock x:Name="LogText" FontFamily="Consolas" FontSize="10" TextWrapping="Wrap"/>
 </ScrollViewer>
 </StackPanel>
 </Border>

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
 <Button x:Name="CancelButton" Content="İptal" Width="80" Margin="0,0,10,0" Background="#C42B1C" Foreground="White" Click="CancelButton_Click"/>
 <Button Content="Kapat" Width="80" Click="CloseButton_Click"/>
 </StackPanel>
 </Grid>
</Window>