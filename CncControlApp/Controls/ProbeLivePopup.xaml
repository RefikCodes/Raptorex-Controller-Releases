<Window x:Class="CncControlApp.Controls.ProbeLivePopup"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Probe Live" Height="660" Width="1560"
 WindowStartupLocation="CenterOwner"
 WindowStyle="ToolWindow"
 ResizeMode="NoResize"
 Topmost="True"
 ShowInTaskbar="False"
 Background="#222"
 Foreground="White">
 <Grid Margin="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock x:Name="HeaderText"
 Text="Probe Live Monitor"
 FontSize="16"
 FontWeight="Bold"
 Margin="0,0,0,8"/>

 <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" CornerRadius="6" Padding="10" Background="#111">
 <StackPanel>
 <TextBlock Text="• Coarse doğrulama:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
 <TextBlock x:Name="CoarseLine" FontFamily="Consolas" FontSize="13" TextWrapping="Wrap"/>
 <Separator Margin="0,8,0,8"/>
 <ScrollViewer x:Name="LogScroll" VerticalScrollBarVisibility="Auto" Height="240">
 <TextBlock x:Name="LogText" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap"/>
 </ScrollViewer>
 </StackPanel>
 </Border>

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
 <Button Content="Kapat" Width="80" Click="CloseButton_Click"/>
 </StackPanel>
 </Grid>
</Window>