<Window x:Class="CncControlApp.Controls.FeedRpmPopup"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Feed &amp; RPM"
 WindowStyle="None"
 ResizeMode="NoResize"
 SizeToContent="WidthAndHeight"
 Background="Transparent"
 AllowsTransparency="True"
 WindowStartupLocation="CenterOwner"
 ShowInTaskbar="False" Topmost="True">
 <Border CornerRadius="14" Background="#FF2C2C2F" BorderBrush="#FF5A5A5C" BorderThickness="1.2" Padding="0" SnapsToDevicePixels="True">
  <Border.Effect>
   <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="0" Opacity="0.6"/>
  </Border.Effect>
  <Grid Margin="0">
   <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="12"/>
    <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

   <!-- Header -->
   <Border Grid.Row="0" Background="#FF3D3D40" Padding="18,14" CornerRadius="14,14,0,0">
    <DockPanel>
     <Ellipse Width="10" Height="10" Fill="#FF64B5F6" VerticalAlignment="Center"/>
        <TextBlock Margin="10,0,0,0" Text="Feed &amp; RPM" Foreground="White" FontSize="22" FontWeight="SemiBold"/>
    </DockPanel>
   </Border>

   <!-- Content -->
   <Border Grid.Row="1" Background="#FF2C2C2F" Padding="22,16,22,8">
    <Grid>
     <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="26"/>
      <ColumnDefinition Width="*"/>
     </Grid.ColumnDefinitions>

     <!-- FEED PANEL -->
     <Border Grid.Column="0" Background="#FF333437" CornerRadius="10" BorderBrush="#FF5F6368" BorderThickness="1" Padding="12">
      <Grid>
       <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
       <TextBlock Grid.Row="0" Text="FEED" FontSize="11" Foreground="YellowGreen" FontWeight="SemiBold" TextAlignment="Center"/>
       <TextBlock Grid.Row="1" x:Name="FeedValueText" Text="100%" FontSize="13" Foreground="#FFDDDDDD" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,6,0,8"/>
       <Slider x:Name="FeedSlider"
               Grid.Row="2" Orientation="Vertical" Width="56" Height="220"
               Minimum="10" Maximum="200" Value="100"
               Style="{StaticResource TouchFriendlySliderStyle}"
               ValueChanged="FeedSlider_ValueChanged"
               IsMoveToPointEnabled="True"
               IsSnapToTickEnabled="False"
               TickFrequency="10"
               SmallChange="1" LargeChange="10"
               MouseLeftButtonUp="FeedSlider_MouseLeftButtonUp"/>
       <Button Grid.Row="3" x:Name="FeedResetButton" Content="RESET" Width="120" Height="30" Margin="0,12,0,0"
               Background="#FF3E3E40" Foreground="#FFF0F0F0" BorderBrush="#FF2A2A2C" BorderThickness="1"
               Click="FeedResetButton_Click"/>
      </Grid>
     </Border>

     <!-- SPACER -->
     <Border Grid.Column="1" Background="Transparent"/>

     <!-- SPINDLE PANEL -->
     <Border Grid.Column="2" Background="#FF333437" CornerRadius="10" BorderBrush="#FF5F6368" BorderThickness="1" Padding="12">
      <Grid>
       <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
       <TextBlock Grid.Row="0" Text="SPINDLE" FontSize="11" Foreground="Orange" FontWeight="SemiBold" TextAlignment="Center"/>
       <TextBlock Grid.Row="1" x:Name="SpindleValueText" Text="100%" FontSize="13" Foreground="#FFDDDDDD" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,6,0,8"/>
       <Slider x:Name="SpindleSlider"
               Grid.Row="2" Orientation="Vertical" Width="56" Height="220"
               Minimum="10" Maximum="200" Value="100"
               Style="{StaticResource TouchFriendlySliderStyle}"
               ValueChanged="SpindleSlider_ValueChanged"
               IsMoveToPointEnabled="True"
               IsSnapToTickEnabled="False"
               TickFrequency="10"
               SmallChange="1" LargeChange="10"
               MouseLeftButtonUp="SpindleSlider_MouseLeftButtonUp"/>
       <Button Grid.Row="3" x:Name="SpindleResetButton" Content="RESET" Width="120" Height="30" Margin="0,12,0,0"
               Background="#FF3E3E40" Foreground="#FFF0F0F0" BorderBrush="#FF2A2A2C" BorderThickness="1"
               Click="SpindleResetButton_Click"/>
      </Grid>
     </Border>
    </Grid>
   </Border>

   <!-- Buttons -->
   <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,22,18">
    <Button x:Name="CloseButton" Content="Close" Width="100" Height="36"
            Background="#FF90CAF9" Foreground="#FF1E1E20" BorderBrush="#FF6FB6F3" FontSize="14" FontWeight="SemiBold"
            Click="CloseButton_Click"/>
   </StackPanel>
  </Grid>
 </Border>
</Window>
