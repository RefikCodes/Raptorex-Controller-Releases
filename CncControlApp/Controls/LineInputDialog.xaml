<Window x:Class="CncControlApp.Controls.LineInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Satır Numarası Girin"
        Width="320" Height="180"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Background="#FF1E1E20" BorderBrush="#FF5F6368" BorderThickness="2" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Başlık -->
            <TextBlock Grid.Row="0" Text="Satırdan Başla" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="#FFFFAA00" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>
            
            <!-- Açıklama -->
            <TextBlock Grid.Row="1" Text="Başlamak istediğiniz satır numarasını girin:" 
                       FontSize="12" Foreground="#FFE0E0E0" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            
            <!-- Satır numarası girişi -->
            <TextBox x:Name="LineNumberTextBox" Grid.Row="2"
                     Width="120" Height="35"
                     FontSize="16" FontWeight="Bold"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     Background="#FF2D2D30"
                     Foreground="#FF00BFFF"
                     BorderBrush="#FF5F6368"
                     BorderThickness="1"
                     Text="1"
                     PreviewTextInput="LineNumberTextBox_PreviewTextInput"
                     KeyDown="LineNumberTextBox_KeyDown"/>
            
            <!-- Butonlar -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button x:Name="OkButton" Content="Tamam" 
                        Width="80" Height="32"
                        Margin="0,0,10,0"
                        Click="OkButton_Click"
                        Background="#FF00BFFF" Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button x:Name="CancelButton" Content="İptal" 
                        Width="80" Height="32"
                        Click="CancelButton_Click"
                        Background="#FF474A50" Foreground="#FFE0E0E0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
