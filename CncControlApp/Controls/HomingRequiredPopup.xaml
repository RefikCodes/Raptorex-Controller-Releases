<Window x:Class="CncControlApp.HomingRequiredPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Homing Required" Height="230" Width="360" WindowStyle="None" ResizeMode="NoResize" Background="White"
        ShowInTaskbar="False" Topmost="True" AllowsTransparency="False" WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI" FontSize="16">
    <Grid Margin="20">
        <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="2" CornerRadius="12" Padding="20"  >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="!" Foreground="Black" FontSize="56" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Press HOME to continue" Foreground="Black" FontSize="20" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,14"/>
                <Button x:Name="HomeButton" Content="HOME" Width="140" Height="42" FontSize="18" FontWeight="Bold" Background="#FFEAA500" Foreground="Black" Cursor="Hand" Click="HomeButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>