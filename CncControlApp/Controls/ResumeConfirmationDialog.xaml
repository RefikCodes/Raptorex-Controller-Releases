                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Toplam SatÄ±r:" Foreground="#aaa" Margin="0,0,10,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtTotalLines" Foreground="White"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- âš ï¸ CRITICAL: Son Pozisyon Bilgisi -->
                    <Border Background="#FF3D3D40" BorderBrush="#FFFFC107" BorderThickness="2" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¯ MAKÄ°NEYÄ° BU POZÄ°SYONA GETÄ°RÄ°N!" Foreground="#FFFFC107" FontWeight="Bold" FontSize="14"/>
