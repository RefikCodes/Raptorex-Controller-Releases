                            <Border Background="#FF1E1E20" CornerRadius="6" Margin="0,8,0,0" Padding="8">
                                <TextBlock x:Name="txtResumeCommands" Foreground="#00ff88" 
                                           FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Warning -->
                    <Border Background="#FF4A3030" CornerRadius="8" Padding="10" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Makineyi MANUEL olarak doÄŸru pozisyona getirdiÄŸinizden emin olun!" 
                                       Foreground="#FFFF6B6B" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Buttons -->
            <Border Grid.Row="2" Background="#FF3D3D40" Padding="15" CornerRadius="0,0,14,14">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="âœ… Devam Et" Width="130" Height="38" 
                            Background="#FF34C759" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Margin="0,0,15,0"
                            Cursor="Hand" Click="ConfirmButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="âŒ Ä°ptal" Width="130" Height="38"
                            Background="#FFFF3B30" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
