                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtUnits" Foreground="White"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Spindle:" Foreground="#aaa" Margin="0,0,10,4"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtSpindle" Foreground="#ffaa00" FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Feed Rate:" Foreground="#aaa" Margin="0,0,10,4"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtFeedRate" Foreground="#00aaff"/>
                                
