                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" Foreground="#FFFFC107" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtLastX" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:" Foreground="#FFFFC107" FontWeight="Bold" FontSize="16" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtLastY" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,4,0,0"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Z:" Foreground="#FFFFC107" FontWeight="Bold" FontSize="16" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtLastZ" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,4,0,0"/>
                            </Grid>
                            
                            <!-- Git Butonu - G0 ile bu pozisyona gÃ¶nder -->
                            <Button x:Name="btnGoToPosition" Content="ðŸš€ Bu Pozisyona Git (G0)" 
                                    Width="200" Height="32" Margin="0,12,0,0"
                                    Background="#FFFFC107" Foreground="#FF1E1E20" FontWeight="Bold"
                                    BorderThickness="0" Cursor="Hand"
                                    Click="GoToPosition_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <TextBlock Text="âš ï¸ Resume'dan Ã¶nce makineyi bu koordinatlara getirmeniz gerekiyor!" 
                                       Foreground="#ffcc00" FontSize="11" TextWrapping="Wrap" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Modal State -->
                    <Border Background="#FF3D3D40" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ Modal State (Otomatik AlgÄ±landÄ±)" Foreground="#FFDDDDDD" FontWeight="Bold" FontSize="14"/>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Koordinat Sistemi:" Foreground="#aaa" Margin="0,0,10,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtCoordSystem" Foreground="#00ff88" FontWeight="Bold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Distance Mode:" Foreground="#aaa" Margin="0,0,10,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtDistanceMode" Foreground="White"/>
                                
