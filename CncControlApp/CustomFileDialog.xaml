<Window x:Class="CncControlApp.CustomFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select G-Code File"
        Height="760" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" BorderBrush="#FFD7E2ED">

    <!-- Lighten overall popup background a bit -->
    <Border Background="#FF666668"
            CornerRadius="15" 
            BorderBrush="#FFEBEDE7" 
            BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="📁 Select G-Code File" 
                           FontSize="18" 
                           Foreground="White" 
                           VerticalAlignment="Center" Background="Black"/>
            </Grid>

            <!-- Current Path (match left panel scheme) -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="14,10" 
                    Margin="0,0,0,14">
                <TextBlock x:Name="CurrentPathTextBlock" 
                           Text="Current Directory" 
                           Foreground="#FF000000" 
                           FontFamily="Consolas" 
                           FontSize="20"/>
            </Border>

            <!-- Main Content: Navigation List + File List -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation List (left) - already perfect, ensure clean markup -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="10" 
                        BorderBrush="#FF505050" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="📍 Konumlar" 
                                   Foreground="Black" 
                                   FontSize="18"
                                   Margin="10,10,10,8"
                                   HorizontalAlignment="Center" FontWeight="Bold"/>

                        <ListBox Grid.Row="1"
                                 x:Name="LocationListBox" 
                                 Foreground="{x:Null}" 
                                 BorderThickness="0" 
                                 Margin="8,0,8,8"
                                 ScrollViewer.CanContentScroll="False"
                                 VirtualizingStackPanel.ScrollUnit="Pixel"
                                 ScrollViewer.PanningMode="Both"
                                 IsManipulationEnabled="True"
                                 SelectionChanged="LocationListBox_SelectionChanged" BorderBrush="#FF2C1F95" Background="{x:Null}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="6,6">
                                        <TextBlock Text="{Binding Icon}" FontSize="20" Margin="0,0,10,0" Foreground="#FF000000"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="#FF000000" 
                                                   FontSize="18" 
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="MinHeight" Value="56"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8" 
                                                        Margin="3">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#FFBDBDBD"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- File List (right) - apply same scheme as left -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="10" 
                        BorderBrush="#FF505050" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="📁 Dosyalar" 
                                   Foreground="#FF000000" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="10,10,10,8"
                                   HorizontalAlignment="Center"/>

                        <ListBox Grid.Row="1"
                                 x:Name="FileListBox" 
                                 Background="White" 
                                 Foreground="{x:Null}" 
                                 BorderThickness="0" 
                                 Margin="10,0,10,10"
                                 MouseDoubleClick="FileListBox_MouseDoubleClick"
                                 SelectionChanged="FileListBox_SelectionChanged"
                                 PreviewMouseDown="FileListBox_PreviewMouseDown"
                                 PreviewTouchDown="FileListBox_PreviewTouchDown"
                                 PreviewTouchUp="FileListBox_PreviewTouchUp"
                                 ScrollViewer.CanContentScroll="False"
                                 VirtualizingStackPanel.ScrollUnit="Pixel"
                                 ScrollViewer.PanningMode="Both"
                                 ScrollViewer.PanningDeceleration="0.001"
                                 ScrollViewer.PanningRatio="1"
                                 IsManipulationEnabled="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="10,8">
                                        <TextBlock Text="{Binding Icon}" FontSize="22" Margin="0,0,12,0" Foreground="#FF000000"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#FF000000" FontSize="18"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="MinHeight" Value="56"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8" 
                                                        Margin="3">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#FFBDBDBD"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Orientation="Horizontal"
                        Margin="0,18,0,0">
                <Button x:Name="OpenButton" 
                        Content="Open" 
                        Width="180" 
                        Height="56" 
                        Margin="0,0,20,0" 
                        Background="#FF309234" 
                        Foreground="White" 
                        BorderBrush="#FFF5FFF5"
                        IsEnabled="False"
                        Click="OpenButton_Click" FontSize="18" Opacity="0.8">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Cancel" 
                        Width="180" 
                        Height="56" 
                        Background="#FF932018" 
                        Foreground="White" 
                        BorderBrush="#FFE8C4C4"
                        Click="CancelButton_Click" FontSize="18" Opacity="0.8">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>