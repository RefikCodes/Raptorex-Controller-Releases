<Window x:Class="CncControlApp.GoToPositionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="420"
        Height="540"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Toggle Button Style for Local/Machine -->
        <Style x:Key="CoordToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF3E3E40"/>
            <Setter Property="Foreground" Value="#FF888888"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="12,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#FF2D3D2D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Coordinate TextBox Style - matching CoordinatesView -->
        <Style x:Key="CoordInputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0,6,6,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#FFFF6600"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="14" Background="#FF2D2D30" BorderBrush="#FFA2A2A4" BorderThickness="1.5" Padding="0" SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF3D3D40" Padding="18,12" CornerRadius="14,14,0,0">
                <DockPanel>
                    <TextBlock Text="ðŸ“"
                               FontSize="22"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Go To Position"
                               Margin="10,0,0,0"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right" 
                            Background="Transparent" 
                            Foreground="#FF888888"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            ToolTip="Kapat (ESC)"/>
                </DockPanel>
            </Border>

            <!-- Toggle: Local / Machine -->
            <Grid Grid.Row="1" Margin="20,16,20,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <ToggleButton x:Name="LocalToggle"
                              Grid.Column="0"
                              Content="LOCAL"
                              IsChecked="True"
                              Style="{StaticResource CoordToggleStyle}"
                              BorderBrush="#FF4CAF50"
                              Foreground="#FF4CAF50"
                              Click="LocalToggle_Click"/>
                
                <ToggleButton x:Name="MachineToggle"
                              Grid.Column="2"
                              Content="MACHINE"
                              IsChecked="False"
                              Style="{StaticResource CoordToggleStyle}"
                              BorderBrush="#FF42A5F5"
                              Foreground="#FF888888"
                              Click="MachineToggle_Click"/>
            </Grid>

            <!-- Coordinate Input Fields -->
            <StackPanel Grid.Row="2" Margin="20,12,20,12">
                
                <!-- X Position -->
                <Grid x:Name="XGrid" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="XLabel" Grid.Column="0" 
                            Background="#FF2D3D2D" 
                            BorderBrush="#FF4CAF50" 
                            BorderThickness="2,2,0,2" 
                            CornerRadius="6,0,0,6"
                            Padding="8,0">
                        <TextBlock Text="X" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox x:Name="XPositionTextBox"
                             Grid.Column="1"
                             Style="{StaticResource CoordInputStyle}"
                             Background="#FF2D3D2D"
                             Foreground="#FF4CAF50"
                             BorderBrush="#FF4CAF50"
                             CaretBrush="#FF4CAF50"/>
                </Grid>

                <!-- Y Position -->
                <Grid x:Name="YGrid" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="YLabel" Grid.Column="0" 
                            Background="#FF2D3D2D" 
                            BorderBrush="#FF4CAF50" 
                            BorderThickness="2,2,0,2" 
                            CornerRadius="6,0,0,6"
                            Padding="8,0">
                        <TextBlock Text="Y" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox x:Name="YPositionTextBox"
                             Grid.Column="1"
                             Style="{StaticResource CoordInputStyle}"
                             Background="#FF2D3D2D"
                             Foreground="#FF4CAF50"
                             BorderBrush="#FF4CAF50"
                             CaretBrush="#FF4CAF50"/>
                </Grid>

                <!-- Z Position -->
                <Grid x:Name="ZGrid" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="ZLabel" Grid.Column="0" 
                            Background="#FF2D3D2D" 
                            BorderBrush="#FF4CAF50" 
                            BorderThickness="2,2,0,2" 
                            CornerRadius="6,0,0,6"
                            Padding="8,0">
                        <TextBlock Text="Z" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <TextBox x:Name="ZPositionTextBox"
                             Grid.Column="1"
                             Style="{StaticResource CoordInputStyle}"
                             Background="#FF2D3D2D"
                             Foreground="#FF4CAF50"
                             BorderBrush="#FF4CAF50"
                             CaretBrush="#FF4CAF50"/>
                </Grid>

                <!-- Feed Rate Slider -->
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Label and Value -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="FEED RATE" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="#FF888888"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="FeedValueText"
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#FFFFB74D"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <!-- Horizontal Slider -->
                    <Border Grid.Row="1" 
                            Background="#FF3A3A3E" 
                            BorderBrush="#FF555555" 
                            BorderThickness="2" 
                            CornerRadius="8"
                            Padding="8,6">
                        <Slider x:Name="FeedRateSlider"
                                Orientation="Horizontal"
                                Height="32"
                                Minimum="0"
                                Maximum="6000"
                                Value="3000"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="False"
                                TickFrequency="100"
                                SmallChange="100"
                                LargeChange="500"
                                ValueChanged="FeedRateSlider_ValueChanged">
                            <Slider.Template>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <Border x:Name="TrackBackground"
                                                Background="#FF555555"
                                                CornerRadius="6"
                                                Height="12"
                                                VerticalAlignment="Center"/>
                                        <Track x:Name="PART_Track">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="Slider.DecreaseLarge">
                                                    <RepeatButton.Template>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Background="#FFFFB74D" CornerRadius="6,0,0,6" Height="12"/>
                                                        </ControlTemplate>
                                                    </RepeatButton.Template>
                                                </RepeatButton>
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="White"
                                                                    BorderBrush="#FFFFB74D"
                                                                    BorderThickness="3"
                                                                    CornerRadius="12"
                                                                    Width="28"
                                                                    Height="28">
                                                                <Border.Effect>
                                                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.4"/>
                                                                </Border.Effect>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="Slider.IncreaseLarge">
                                                    <RepeatButton.Template>
                                                        <ControlTemplate TargetType="RepeatButton">
                                                            <Border Background="Transparent"/>
                                                        </ControlTemplate>
                                                    </RepeatButton.Template>
                                                </RepeatButton>
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Slider.Template>
                        </Slider>
                    </Border>
                </Grid>

            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="20,8,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="GoButton" 
                        Grid.Column="0"
                        Height="52"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GoButton_Click"
                        ToolTip="Pozisyona git (Enter)">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸš€" FontSize="22" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="GO" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF66BB6A"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF388E3C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="CancelButton" 
                        Grid.Column="2"
                        Width="100"
                        Height="52"
                        Background="#FF555555"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        ToolTip="Ä°ptal (ESC)">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <TextBlock Text="Ä°ptal" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF666666"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#FF444444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Window>
